<Window x:Class="Restaurant.UI.Modern.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Restaurant.ViewModels;assembly=Restaurant.ViewModels"
        Title="Autentificare" Height="250" Width="350"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <Button Content="Continuă ca Guest" 
              Command="{Binding ContinueAsGuestCommand}" 
              Margin="0,0,0,10"/>
            <Button Content="Client" 
              Command="{Binding ShowClientLoginCommand}" 
              Margin="0,0,0,10"/>
            <Button Content="Angajat" 
              Command="{Binding ShowEmployeeLoginCommand}" 
              Margin="0,0,0,20"/>

            <StackPanel Visibility="{Binding IsLoginPanelVisible, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Email:"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>
                <TextBlock Text="Parolă:"/>
                <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Margin="0,5,0,10"/>
                <Button Content="Login" 
                Command="{Binding LoginCommand}" 
                IsEnabled="{Binding CanLogin}" 
                Margin="0,10,0,0"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
