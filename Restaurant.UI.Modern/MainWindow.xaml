<Window x:Class="Restaurant.UI.Modern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Restaurant.ViewModels;assembly=Restaurant.ViewModels"
        Title="Restaurant Manager" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <TabControl>

            <TabItem Header="Meniuri">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 1) Lista de meniuri -->
                    <ListBox Grid.Column="0"
             ItemsSource="{Binding MeniuVM.AllMeniuri}"
             DisplayMemberPath="Denumire"
             SelectedItem="{Binding MeniuVM.SelectedMeniu}"
             Margin="0,0,10,0"/>

                    <!-- 2) Detaliile meniului + buton Adaugă -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- butonul e activ doar pentru Client -->
                        <Button Grid.Row="0"
              Content="Adaugă în comandă"
              Width="150"
              Margin="0,0,0,10"
              HorizontalAlignment="Left"
              Command="{Binding ComandaVM.AddMenuToOrderCommand}"
              CommandParameter="{Binding MeniuVM.SelectedMeniu}"
              IsEnabled="{Binding IsClient}"/>

                        <!-- DataGrid cu preparatele meniului -->
                        <DataGrid Grid.Row="1"
                ItemsSource="{Binding MeniuVM.Items}"
                AutoGenerateColumns="False"
                CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Preparat"
                              Binding="{Binding Preparat}"
                              Width="*"/>
                                <DataGridTextColumn Header="Gramaj"
                              Binding="{Binding GramajPortie}"
                              Width="100"/>
                                <DataGridTextColumn Header="Preț"
                              Binding="{Binding Subtotal, StringFormat=C}"
                              Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>


            <!-- 2) COMENZI: doar Client -->
            <TabItem Header="Comenzi"
               Visibility="{Binding IsClient, Converter={StaticResource BoolToVis}}">
                <Grid DataContext="{Binding ComandaVM}" Margin="0,0,0,10">
                    <!-- aici păstrezi ComandaViewModel cum ai acum:
               StartOrderCommand, AddItemCommand, PlaceOrderCommand,
               Items, AllPreparate, AllMeniuri etc. -->
                </Grid>
            </TabItem>

            <!-- 3) ALERGENI: doar Angajat -->
            <TabItem Header="Alergeni"
               Visibility="{Binding IsAngajat, Converter={StaticResource BoolToVis}}">
                <Grid DataContext="{Binding AlergenVM}" Margin="0,0,0,10">
                    <!-- aici e read-only pentru toți (DataGrid) și
               butoanele Load/Add/Update/Delete ascunse
               pentru non-Angajat, după cum am arătat anterior -->
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
